<%include components/header%>

<div class="form-container mx-auto">
		<form action="/signup" method="POST" autocomplete="on">
			<input id="location" type="text" name="location" value="" hidden>
			<div class="form-row align-items-center">
				<div class="col col-3">
					<h1>Sign up</h1>
				</div>
				<div class="col">
					<input required aria-describedby="basic-addon1" type="text" class="form-control" name="username" placeholder="username" autocomplete="on" minlength="3" maxlength="20">
				</div>
			</div>
			<div class="form-row">
				<div class="col">
						<input required aria-describedby="basic-addon1" class="form-control" type="email" name="email" placeholder="email" autocomplete="on" pattern="^[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,20}$" title="Please enter a valid email address">
				</div>
			</div>
			<div class="form-row">
				<div class="col">
					<input required aria-describedby="basic-addon1" type="text" class="form-control" name="firstname" placeholder="firstname" autocomplete="on" pattern="^[a-zA-Z]{2,50}$" title="Your first name should be 2-50 characters long and can contain only letters">
				</div>
				<div class="col">
					<input required aria-describedby="basic-addon1" type="text" class="form-control" name="lastname" placeholder="lastname" autocomplete="on" pattern="^[a-zA-Z]{2,50}$" title="Your last name should be 2-50 characters long and can contain only letters">
				</div>
			</div>
			<div class="form-row">
				<div class="col">
					<input aria-describedby="basic-addon1" class="form-control" type="password" name="password" placeholder="password" autocomplete="off" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,50}$" title="Must contain at least one number, one uppercase and lowercase letter, 8-50 characters long">
				</div>
				<div class="col">
					<input aria-describedby="basic-addon1" class="form-control" type="password" name="confirmedPassword" placeholder="password" autocomplete="off" pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,50}$" title="Must contain at least one number, one uppercase and lowercase letter, 8-50 characters long">
				</div>
			</div>
			<button class="btn bg-dark btn-block" type="submit">Submit</button>
		</form>
		<hr>
		<form action="/auth/42" method="get">
			<button class="btn bg-intra btn-block">Intra 42 Login</button>
		</form>
</div>

<script>
	window.onload = () => {
		getGeolocation();
	}
</script>

<%include components/footer%>
